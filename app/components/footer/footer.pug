include ../../blocks/grid/grid
include ../../blocks/button/button
include ../../components/social/social

mixin footer()
  +b.SECTION.footer&attributes(attributes)
    .container
      +e.wrapper
        +grid
          +col(2)
            +e.logo Lantelia
          +col(2)
            +e.descr Профессиональная косметика для волос Lantelia
            +social('vk', 'f', 'instagram').__social
          +col(2).grid__col_links
            +e.UL.links
              +e.LI.link
                a(href="#") Продукция
              +e.LI.link
                a(href="#") Где купить
              +e.LI.link
                a(href="#") Обучение и новости
              +e.LI.link
                a(href="#") О компании
              +e.LI.link
                a(href="#") Контакты
          +col(2).grid__col_links
            +e.UL.links
              +e.LI.link
                +e.A(href="#") Публичная оферта
              +e.LI.link
                +e.A(href="#") Доставка и оплата
          +col(2).grid__col_right
            +button('НАЧАТЬ РАБОТАТЬ С LANTELIA')._gradiented
            +e.copyright &#169; 2017 Lantelia. Все права защищены
