//- модификатор при черном фоне +header()._main

include ../../blocks/icon/icons
include ../../blocks/link/link
include ../../blocks/burger/burger
include ../../components/social/social

mixin header()
  +b.header&attributes(attributes)
    .container
      +e.wrapper
        +burger()._white
        +e.A(href="index.html", title="Lantelia").logo
          +icon('lantelia')
        +e.A(href="#").call
        +e.NAV.nav
          +e.nav-wrapper
            +e.nav-content
              +e.SPAN.nav-name Lantelia
              +e.P.nav-text Профессиональная косметика для волос Lantelia
              +social('vk', 'f', 'twitter').__social
            +e.UL.nav-group
              +e.LI.nav-item
                +link()(href="catalog.html")._small.header__link Продукция
                +icon('arrow').nav-icon
              +e.LI.nav-item
                +link()(href="sales-offices.html")._small.header__link Где купить
                +icon('arrow').nav-icon
            +e.UL.nav-group
              +e.LI.nav-item
                +link()(href="newsTraining.html")._small.header__link Обучение и новости
                +icon('arrow').nav-icon
              +e.LI.nav-item
                +link()(href="about.html")._small.header__link О компании
                +icon('arrow').nav-icon
              +e.LI.nav-item
                +link()(href="contacts.html")._small.header__link Контакты
                +icon('arrow').nav-icon
              //- +e.A(href="#").link Еще пункт
