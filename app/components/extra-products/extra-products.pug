include ../../blocks/section-head/section-head
include ../../blocks/slider/slider
include ../../blocks/product-card/product-card
include ../../blocks/button/button

mixin extra-products(subtitle, title)
  +b.SECTION.extra-products.section&attributes(attributes)
    .container
      .section__head
        +section-head(subtitle, title)
    .container.container_slider
      +slider(false, true)
        +slide()._big
          +product-card('assets/images/picProduct/triple.png')(href="#product3")._xl.js-fancybox
        +slide()
          +product-card('assets/images/picProduct/botox_250ml_05@2x.png')(href="#product2").js-fancybox
        +slide()
          +product-card('assets/images/picProduct/botox_100ml_03@2x.png')(href="#product4").js-fancybox
        +slide()
          +product-card('assets/images/picProduct/botox_250ml_05@2x.png')(href="#product1").js-fancybox
        +slide()
          +product-card('assets/images/picProduct/botox_100ml_01@2x.png')(href="#product5").js-fancybox
