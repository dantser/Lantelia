include ../../blocks/section-head/section-head
include ../../blocks/slider/slider
include ../../blocks/product-card/product-card
include ../../blocks/button/button
include ../../components/product-popup/product-popup


mixin extra-products(subtitle, title)
  +b.SECTION.extra-products.section&attributes(attributes)
    .section__head
      .container
        +section-head(subtitle, title)
    .container.container_slider
      +slider(false, true)
        +slide()._big
          +product-card('assets/images/picProduct/botox_100ml_04(procedure).png')(href="#product3")._xl.js-fancybox
        +slide()
          +product-card('assets/images/picProduct/botox_250ml_05@2x.png')(href="#product2").js-fancybox
        +slide()
          +product-card('assets/images/picProduct/botox_100ml_03@2x.png')(href="#product4").js-fancybox
        +slide()
          +product-card('assets/images/picProduct/botox_250ml_05@2x.png')(href="#product1").js-fancybox
        +slide()
          +product-card('assets/images/picProduct/botox_100ml_01@2x.png')(href="#product5").js-fancybox
    +product-popup('assets/images/picProduct/botox_250ml_07 (line)@2x.png', '7 990 ₽', 'product1')
    +product-popup('assets/images/picProduct/clarify_250ml_03(line)@2x.png', '7 990 ₽', 'product2')
    +product-popup('assets/images/picProduct/botox_100ml_04(procedure).png', '7 990 ₽', 'product3')
    +product-popup('assets/images/picProduct/smooth_100ml_05(procedure)@2x.png', '7 990 ₽', 'product4')
    +product-popup('assets/images/picProduct/spa_250ml_03(line)@2x.png', '7 990 ₽', 'product5')
