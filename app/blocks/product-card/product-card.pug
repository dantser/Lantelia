//- ._xl - для тройной карточки
include ../../blocks/icon/icons
include ../../blocks/modal/modal
include ../../blocks/popups/popups
include ../../blocks/form-elements/form-elements

mixin product-card(img, link)
  +b.product-card&attributes(attributes)
    if link
      +e.A(href=link).link.js-fancybox
    +e.wrapper
      +e.top
        +e.H3.line 
          | Professional
          br
          | botox
          br
          | therapy
        +e.UL
          +e.LI.name Шампунь
          +e.LI.name Кератин
      +e.image
        img(src= img)
      +e.bottom
        +e.volumes
          +e.SPAN.volume 250 мл
          +e.SPAN.volume 250 мл
        +e.A(href="#", title="Перейти к товару").arrow
          +e.null
          +icon('arrow')
        +e.A(href="#", title="Добавить в корзину").cart
          +e.price 2 199 ₽
          +icon('shopping-cart')

mixin product-card-cart(img, price)
  +b.product-card._cart&attributes(attributes)
    +e.wrapper
      +e.col.__left
        +e.image
          img(src= img)
        +e.H3.__line 
          | Professional
          br
          | botox
          br
          | therapy
        +e.UL.names._mobile
          +e.LI.name Шампунь 250 мл
          +e.LI.name Реконструктор 250 мл
          +e.LI.name Серум 250 мл
      +e.UL.col.__names
        +e.LI.name Шампунь 250 мл
        +e.LI.name Реконструктор 250 мл
        +e.LI.name Серум 250 мл
      +e.col.__right
        +order-price('Цена', price).js-price
        +e.SELECT.select.select._bordered._triangle
          option(value=1, selected) 1
          option(value=2) 2
          option(value=3) 3
      +e.col.__bottom
        +order-price('Итого', price).__total
      +e.delete
        +icon('close').icon.cart__delete
