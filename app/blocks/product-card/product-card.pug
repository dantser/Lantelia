//- ._xl - для тройной карточки
include ../../blocks/icon/icons
include ../../blocks/modal/modal
include ../../blocks/popups/popups
include ../../blocks/form-elements/form-elements

mixin product-card(img, link)
  +b.product-card&attributes(attributes)
    +e.A(href=link).wrapper
      +e.top
        +e.H3.line 
          | Professional
          br
          | botox
          br
          | therapy
        +e.UL
          +e.LI.name Шампунь
          +e.LI.name Кератин
      +e.image
        img(src= img)
      +e.bottom
        +e.volumes
          +e.SPAN.volume 250 мл
          +e.SPAN.volume 250 мл
        +e.A(href="#", title="Перейти к товару").arrow
          +e.null
          +icon('arrow')
        +e.A(href="#", title="Добавить в корзину").cart
          +e.price 2 199 ₽
          +icon('shopping-cart')

mixin product-card-cart(img)
  +b.product-card._cart&attributes(attributes)
    +e.wrapper
      +e.top
        +e.left
          +e.image
            img(src= img)
          +e.H3.line 
            | Professional
            br
            | botox
            br
            | therapy
        +e.UL.names
          +e.LI.name Шампунь 250 мл
          +e.LI.name Реконструктор 250 мл
          +e.LI.name Серум 250 мл
        +e.right
          +order-price('Цена', '7 990 ₽').js-price
          +select().select_black
            option(value=1, selected) 1
            option(value=2) 2
            option(value=3) 3
      +e.bottom
        +order-price('Итого', '7 990 ₽')
      +e.delete
        +icon('close').icon.cart__delete
