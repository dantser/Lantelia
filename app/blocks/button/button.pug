mixin button(icon, isSubmit)
  if (isSubmit)
    +b.BUTTON(type='submit').button&attributes(attributes)
      +e.text
        block
  else
    +b.BUTTON.button&attributes(attributes)
      if icon
        +icon(icon).icon
      +e.text
        block

mixin round(icon)
  +b.BUTTON.button._round&attributes(attributes)
    +icon(icon).icon
    block
